<% if user_signed_in? && current_user == @pad.creator %>
  <div class="snap-drawers">
    <div id="pad-menu" class="snap-drawer snap-drawer-left">
      <%= render partial: 'form' %>
    </div>
  </div>
<% end %>

<% if current_user.nil? && @pad.is_public_readonly %>
<iframe frameborder="0" src="/epl/p/<%= @pad.readonly_id %>"></iframe>
<% else %>
<iframe frameborder="0" src="/epl/p/<%= @pad.pad_id %>"></iframe>
<% end %>
