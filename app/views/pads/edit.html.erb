<h1><%= t('edit_pad_header') %></h1>

<%= render 'form' %>

<% if @pad.group.name == t(ENV['UNGROUPED_NAME']) %>
  <%= link_to t('go_to_pad_link'), '/p/'+@pad.name %>
  |
  <%= link_to t('back_to_padlist'), '/p' %>
<% else %>
  <%= link_to t('go_to_pad_link'), '/p/'+@pad.group.name+'/'+@pad.name %>
  |
  <%= link_to t('back_to_padlist'), '/groups/'+@pad.group.id.to_s %>
<% end %>
