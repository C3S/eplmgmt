<h1>Listing groups</h1>

<table class="table sortable">
  <thead>
    <tr>
      <th><%= sortable 'name', 'Name' %></th>
      <th><%= sortable 'users-name', 'Creator' %></th>
      <th><%= sortable 'created_at', 'Created' %></th>
      <th><%= sortable 'updated_at', 'Updated' %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group %></td>
        <td><%= group.creator.name rescue '' %></td>
        <td><%= group.created_at rescue '' %></td>
        <td><%= group.updated_at rescue '' %></td>
        <td><%= link_to 'Settings', edit_group_path(group) %></td>
        <td><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

